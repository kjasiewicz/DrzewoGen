@model IEnumerable<Db4o_lab2.ViewModels.IndexViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Dodaj nową osobę", "Create")
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Wiek)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FatherName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MotherName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sex)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumOfChilds)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Wiek)
        </td>
        <td>
            @(item.FatherName == "Nie podano" ? Html.DisplayFor(modelItem => item.FatherName) : Html.ActionLink(item.FatherName, "Details", new {id = item.FatherName}, new {@class = "text-primary"}))
        </td>
        <td>
            @(item.MotherName == "Nie podano" ? Html.DisplayFor(modelItem => item.MotherName) : Html.ActionLink(item.MotherName, "Details", new { id = item.MotherName }, new { @class = "text-primary" }))
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sex)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumOfChilds)
        </td>
        <td>
            @Html.ActionLink("Szczegóły", "Details", new { id = item.Name },new{@class="btn btn-primary"})
            @Html.ActionLink("Usuń", "Delete", new { id = item.Name }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
